<article class="edit-form-container">
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <p><input name="post-title" type="text" value="{{post.title}}" /></p>

            <input name="post-content" type="text" value="{{ post.post_content}}" />

        </div>

        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
    </form>
</article>
{{!-- <hr> --}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
<div>

    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
</div>
